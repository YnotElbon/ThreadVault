#!/usr/bin/env bash
set -euo pipefail

ROOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")"/../.. && pwd)"
FILE="$ROOT_DIR/docs/Mac_Mini_Onboarding_Checklist.md"
if [ ! -f "$FILE" ]; then
  echo "Checklist not found: $FILE" >&2
  exit 1
fi

if command -v open >/dev/null 2>&1; then
  open "$FILE"
else
  echo "$FILE"
fi
